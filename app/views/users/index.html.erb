<div class='container-fluid'>

	<div class='form-section'>
		<h1>Search Users</h1>
		<%= form_tag(users_path, method: 'get', remote: true, id: 'search-form', class: 'form-inline') do %>
			<%= text_field_tag('search[first_name]', nil, placeholder: 'Search by first name...', class: 'form-control') %>
			<%= text_field_tag('search[age]', nil, placeholder: 'Search by age...', class: 'form-control') %>
			<%= text_field_tag('search[profession]', nil, placeholder: 'Search by profession...', class: 'form-control') %>
			<%= submit_tag('Search', class: 'btn btn-primary') %>
		<% end %>
	</div>

	<div class='table-section col-md-9'>
		<h1> List of Users </h1>

		<table class='table'>
			<tr>
				<td>First Name</td>
				<td>Age</td>
				<td>Profession</td>
			</tr>
			<tbody id="users-rows">
				<%= render partial: 'users', locals: { users: @users} %>
			</tbody>
		</table>
	</div>
</div>